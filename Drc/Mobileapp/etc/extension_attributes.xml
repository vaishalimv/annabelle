<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
      <attribute code="is_wishlist_product" type="bool" />
    </extension_attributes>

    <!-- added extension_attributes in quote item -->
    <extension_attributes for="Magento\Quote\Api\Data\CartItemInterface">
      <attribute code="product_id" type="string" />
      <attribute code="name" type="string" />
      <attribute code="image" type="string" />
      <attribute code="price" type="string" />
      <attribute code="special_price" type="string" />
      <attribute code="final_price" type="string" />
      <attribute code="discount_rule" type="string" />
      <attribute code="manufacturer" type="string" />      
      <attribute code="short_description" type="string" />
      <attribute code="currency_code" type="string" />      
      <attribute code="avaibility" type="string" />
      <attribute code="size" type="string" />
      <attribute code="multi_buy_label" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
      <attribute code="multi_buy_offers" type="string" />
    </extension_attributes>
    <!-- added extension_attributes in sale order item -->
    <extension_attributes for="Magento\Sales\Api\Data\OrderItemInterface">
        <attribute code="name" type="string"/>
        <attribute code="image" type="string"/>
        <attribute code="manufacturer" type="string"/>
        <attribute code="size" type="string"/>
        <attribute code="short_description" type="string"/>
        <attribute code="currency_code" type="string"/>
        <attribute code="shipping_country_name" type="string"/>
        <attribute code="billing_country_name" type="string"/>  
        <!-- end -->
    </extension_attributes>
    <!-- added currency_code in order detials -->
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">  
        <attribute code="currency_code" type="string" />
        <attribute code="status_label" type="string" />
    </extension_attributes>
</config>